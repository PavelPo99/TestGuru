<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
     <% if logged_in? %>
      <p class="nav user">Welcome, <b><%= current_user.email %></b> <%= link_to 'Guru!', root_path %></p>    
      
      <nav><%= link_to 'Выйти', logout_path(session[:session_id]),  data: { turbo_method: :delete,  turbo_confirm: "Are you sure?" }%></nav>
    <% elsif !current_page?('/login') && !current_page?('/signup') %>  
      <br><nav>
        <ul>
          <li><%= link_to 'Sign up', signup_path %></li>
          <li><%= link_to 'Sign in', login_path %></li>
        </ul>
      </nav>
    <% end %>
    
    <%= yield %>
    <% console %>
    <br><hr />
    <%= render 'layouts/footer' %>
  </body>
</html>
