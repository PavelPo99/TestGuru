<% unless current_user.is_a?(Admin) %>
  <% if user_signed_in? %>
    <nav><%= link_to t('helpers.link.log_out'), destroy_user_session_path,  data: { turbo_method: :delete,  turbo_confirm: t('helpers.data.are_you_sure') }%></nav>

    <p class="nav user">
      Welcome, <b><%= current_user.email %></b> <%= link_to t('.guru'), root_path %>
    </p>    
    
  <% elsif !current_page?('/login') && !current_page?('/signup') && current_page?('/gurus') || current_page?('/')%>  
    <br><nav>
      <ul>
        <li><%= link_to t('helpers.link.sign_up'), new_user_registration_path %></li>
        <li><%= link_to t('helpers.link.log_in'), new_user_session_path %></li>
      </ul>
    </nav>
  <% end %>
<% end %>
