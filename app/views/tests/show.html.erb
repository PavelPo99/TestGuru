<h1>Questions for <%= @test.title %></h1>

<p><%= link_to 'New Question', new_test_question_path(@test) %></p>

<table> 
  <% if @test.questions.count != 0 %>
    <tr>
      <th>Questions</th>
      <th>Answers</th>
      <th colspan='3'>Action</th>
    </tr>
  <% end %>
  
  <%= render(@test.questions) || "There are no Questions at the moment." %>
  
</table>

<br><%= link_to 'Back', tests_path %>