<h2><%= t('.header') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t('.email_label') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t('.password_label') %>
    <% if @minimum_password_length %>
    <em><%= t('.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('.password_confirmation_label') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

    <div class="field">
    <%= f.label :first_name, t('.first_name_label') %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name, t('.last_name_label') %>
    <%= f.text_field :last_name %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up_button') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
