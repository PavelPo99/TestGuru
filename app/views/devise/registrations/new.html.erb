<div class="row justify-content-center mt-3">
  <div class="col col-md-4">       
    <h2><%= t('.header') %></h2>

    <div class="card border-primary">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <p>
              <%= f.label :email, t('.email_label') %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
            </p>

            <p>
              <%= f.label :password, t('.password_label') %>
              <% if @minimum_password_length %>
              <em><%= t('.minimum_password_length', count: @minimum_password_length) %></em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control border-2' %>
            </p>

            <p>
              <%= f.label :password_confirmation, t('.password_confirmation_label') %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control border-2' %>
              <span id='message'></span>
            </p>

            <p>
              <%= f.label :first_name, t('.first_name_label') %>
              <%= f.text_field :first_name, class: 'form-control' %>
            </p>

            <p>
              <%= f.label :last_name, t('.last_name_label') %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </p>
          
            <%= f.submit t('.sign_up_button'), class: 'btn btn-primary mt-3'  %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-2">  
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>  
