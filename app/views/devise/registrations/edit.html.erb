<div class="row justify-content-center mt-3">
  <div class="col col-md-4">        
    
    <h2><%= t('.header', resource_name: resource_name.to_s.humanize) %></h2>

    <div class="card border-primary">
      <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            
            <div class="form-group">
              <p>
                <%= f.label :email, t('.email_label') %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
              </p>
              <p>
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div><%= t('.waiting_confirmation', email: resource.unconfirmed_email) %></div>
                <% end %>
              </p>

              <p>
                <%= f.label :password, t('.password_label') %> <i><%= t('.password_hint') %></i>
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </p>

              <p>
                <%= f.label :password_confirmation, t('.password_confirmation_label') %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              </p>

              <p>
                <%= f.label :current_password, t('.current_password_label') %> <i><%= t('.current_password_hint') %></i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
              </p>
            </div>

            <div class="actions">
              <%= f.submit t('.update_button'), class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>    

      <h3><%= t('.cancel_account_header') %></h3>

      <div class="form-group">
        <%= t('.cancel_account_text') %> <%= button_to t('.cancel_account_header'), registration_path(resource_name),
                                                      data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                                                      method: :delete, class: 'btn btn-primary'%>
      </div>

    <div class="mt-1">  
      <%= link_to t('.back_link'), :back %>
    </div>
  </div>
</div>  
