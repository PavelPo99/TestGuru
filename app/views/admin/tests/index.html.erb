<h1>Tests:</h1>

<p><%= link_to 'New Test', new_admin_test_path(@test) %></p>

<table>
  <% if @tests.count != 0 %>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th>Categories</th>
      <th>Author</th>
      <th>The number of questions</th>

      <th colspan='3'>Action</th>
    </tr>
   <% end %>
  
  <%= render(@tests) || "There are no Questions at the moment." %>

</table>
