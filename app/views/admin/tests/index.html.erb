<h1><%= t('.header') %></h1>

<p><%= link_to t('helpers.link.new_test'), new_admin_test_path(@test) %></p>

<table>
  <% if @tests.count != 0 %>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.author') %></th>
      <th><%= t('.num_of_questions') %></th>

      <th colspan='3'><%= t('.action') %></th>

    </tr>
   <% end %>
  
  <%= render(@tests) || t('.no_tests') %>

</table>
