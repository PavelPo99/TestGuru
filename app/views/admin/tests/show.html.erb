<h1 class="text-center my-4">
  <%= t('.header', title: @test.title) %>
</h1>

<p class="text-start my-4">
  <%= link_to t('helpers.link.new_question'), new_admin_test_question_path(@test), class: "link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
</p>

<%= render(@test.questions) || content_tag(:div, t('.no_questions'), class: 'col text-center') %>

<p class="text-start my-4">
  <%= link_to t('helpers.link.back'), admin_tests_path, class: "link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
</p>
