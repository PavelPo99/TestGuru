<h1 class="text-center my-4">
  <%= t('.question_body', body: @question.body) %>
</h1>

<p class="text-start my-4">
  <%= link_to t('.new_answer'), new_admin_question_answer_path(@question.id), class: "link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
</p>

<h3><%= t('.answer') %></h3>

<ol>
  <%= render @question.answers %>
</ol>

<p class="text-start my-4">
  <%= link_to t('helpers.link.back'), admin_test_path(@question.test), class: "link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
</p>
