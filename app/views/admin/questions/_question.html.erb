<tr>
    <td><%= question.body %></td>
    <td>      
      <ol>
        <% question.answers.each do |a| %>
          <li><%= a.body%></li>
        <% end %>
      </ol>
    </td>

    <td><%= button_to t('helpers.button.show'), admin_question_path(question), method: :get, params: { lang: params[:lang] }  %></td>
    <td><%= button_to t('helpers.button.edit'), edit_admin_question_path(question), method: :get, params: { lang: params[:lang] }  %></td>
    <td><%= button_to t('helpers.button.delete'),  admin_question_path(question), method: :delete, data: {  turbo_confirm: t('helpers.data.are_you_sure') } %></td>
</tr>
