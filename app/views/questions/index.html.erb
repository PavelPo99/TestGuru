<h1>Questions for <%= @test.title %></h1>

<%= link_to 'New Question', new_test_question_path(@test) %>
<ol>
  <% @questions.each do |question| %>
    <li>
      <h3><%= link_to question.body, test_question_path(@test, question) %></h3>
      <%= link_to "Delete", test_question_path(@test, question),   method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ol>

<br><%= link_to 'Back', tests_path %>
