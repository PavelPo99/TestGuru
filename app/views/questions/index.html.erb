<h1>Questions for <%= Test.find(params[:test_id]).title %></h1>

<p><%= link_to 'New Question', new_test_question_path %></p>

<table> 
  <% if @questions.count != 0 %>
    <tr>
      <th>Questions</th>
      <th>Answers</th>
      <th colspan='3'>Action</th>
    </tr>
  <% end %>
  
  <%= render(@questions) || "There are no Questions at the moment." %>
  
</table>

